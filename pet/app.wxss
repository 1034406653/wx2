/**app.wxss**/
html,body,page{
  width: 100%;
  height: 100%;
}
view,html,body,text,image,cover-view,input{
  box-sizing: border-box;
}
image,cover-image{
  display: block;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #f0f1f5;
} 
/*弹窗  */
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
  left: 0;
  top: 0;
  z-index: 9998;
}
.modal-dialog{
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 16%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: 0 105rpx;
  border-radius: 36rpx; 
}
.modal-dialog .modal-title{
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-dialog .modal-content {
  padding: 50rpx 32rpx;
}
.modal-dialog .modal-input {
  width: 100%;
  height: 64rpx;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.modal-dialog .modal-input input {
  display: block;
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  color: #333;
  padding-left: 20rpx;
}
.modal-dialog .modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.modal-dialog .btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.modal-dialog .btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}