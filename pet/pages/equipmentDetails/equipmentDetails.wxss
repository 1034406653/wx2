/* pages/equipmentDetails/equipmentDetails.wxss */

.container {
  height: 100%;
  min-height: 100%;
}

.details-li {
  width: 100%;
  height: 90rpx;
  line-height: 88rpx;
  padding-left: 26rpx;
  background: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
}

.details-title {
  color: #999;
  font-size: 28rpx;
  float: left;
  width: auto;
}

.details-li .details-nav {
  float: right;
  width: 64rpx;
  height: 64rpx;
  display: block;
}

.details-li .details-nav image {
  width: 14rpx;
  height: 26rpx;
  margin: 31rpx auto;
}

.details-li .details-text {
  float: right;
  color: #333;
  font-size: 28rpx;
  width: auto;
}

.details-text1 {
  color: #999;
  float: right;
  font-size: 28rpx;
  width: auto;
  padding-right: 30rpx;
}

.details-li .portrait{
  float: right;
  width: 60rpx;
  height: 60rpx;
  margin-top: 14rpx;
  border-radius:50%; 
}

.details-li2 {
  width: 100%;
  height: auto;
}

.details-li2 {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  line-height: 88rpx;
  padding-left: 26rpx;
}

.details-text2 {
  float:right;
  width: 510rpx;
  height: 128rpx;
  padding: 14rpx 0;
  padding-right: 30rpx;
}
.details-text2 view{
  width: 100%;
  height: 100rpx;
   line-height: 50rpx;
  color: #999;
  font-size: 28rpx;
   white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
view button{
  display: block;
  width: 100%;
  height: 88rpx;
  color: #999;
  font-size: 30rpx;
  text-align: center;
  line-height: 88rpx; 
  margin-top: 48rpx;
  background: #fff;
}
view button::after{
border: none;

}
