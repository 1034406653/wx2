/* pages/equipmentList/equipmentList.wxss */
.container{
  height: auto;
  min-height: 100%;
}
.equipment-list{
  width: 100%;
  height: auto;
  margin-top: 16rpx;
}
.equipment-li{
  width: 100%;
  height: 180rpx;
  margin-bottom: 3rpx;
  background: #fff;
  overflow: hidden;
}
.equipment-li image{
  float: left;
  width: 116rpx;
  height: 116rpx;
  margin: 32rpx;
}
.equipment-li .equipment-information{
  float: left;
  width: 400rpx;
  height: 180rpx;
  line-height: 56rpx;
  padding: 34rpx 0; 
}
.equipment-li .equipment-id{
  color: #333;
  font-size: 28rpx; 
  width: 100%;
  height: 56rpx;
}
.equipment-li .equipment-net{
  color: #999;
  font-size: 24rpx; 
  width: 100%;
  height: 56rpx;
}
.equipment-li .equipment-net view{
  float: left;
 width: auto;
 padding-right: 20rpx;
}
.equipment-li .selectBtn{
  float: right;
  width: 100rpx;
  height: 180rpx;
}
.equipment-li icon{
  margin: 60rpx auto;
}
.equipment-box{
  width: 200rpx;
  height: 160rpx;
  margin: 72rpx auto;
}
.equipment-box image{
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
}
.equipment-box view{
  line-height: 70rpx;
  height: 70rpx;
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}