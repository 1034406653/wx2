/* pages/center/center.wxss */
.center-top{
  width: 100%;
  height: 190rpx;
  background: #fff; 
  padding: 30rpx;
  overflow: hidden;
}
.center-top>image{
  width: 118rpx;
  height: 118rpx;
  float: left;
}
.center-top .nameBox{
  float: left;
  width: 470rpx;
  height: 120rpx;
  padding-left: 30rpx;
}
.center-top .name-top{
 width: 100%;
 height: 76rpx;
 line-height: 76rpx;
  color: #666;
  font-size: 30rpx;
}
.center-top .name-top>view{
 float: left;
 width: auto;
 height: 76rpx;
}
.center-top .name-top .grade{
 float: left;
 width: 46rpx;
 height:76rpx;
 position: relative;
}
.center-top .grade image{
 width: 30rpx;
 height: 24rpx;
 margin: 26rpx 8rpx;
}
.center-top .grade view{
  position: absolute;
  width: 30rpx;
  height: 24rpx;
  left: 8rpx;
  top: 26rpx;
  color: #fff;
  font-size: 16rpx;
  text-align: center;
  line-height: 26rpx;
}
.center-top .name-top>image{
  width: 14rpx;
  height: 22rpx;
  float: left;
  margin: 27rpx 0;
}
.idNumber{
  width: 100%;
  height: 22rpx;
  line-height: 22rpx;
  color: #999;
  font-size: 22rpx;
}
.sign{
  float: left;
  width: 100rpx;
  height: 48rpx;
  border: 2rpx solid #666;
  border-radius: 10rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 36rpx;
}
.signActive{
  border-color:#999;
  color: #999; 
}
.set{
  width: 100%;
  height: 88rpx;
  background: #fff;
  line-height: 88rpx;
  color: #666;
  font-size: 26rpx;
  padding: 0 30rpx;
  margin-top: 30rpx;
  overflow: hidden;
}
.set view{
  float: left;
  width: auto;
  height: 88rpx;
}
.set image:first-child{
  float:left;
  width: 44rpx;
  height: 38rpx;
  margin-top: 26rpx;
  margin-right: 20rpx;
}
.set image:last-child{
  width: 12rpx;
  height: 24rpx;
  float: right;
  margin: 32rpx 0 0 0;
}
/*弹窗  */
.showModal{
  position: fixed;
  width: 460rpx;
  height: 280rpx;
  left: 50%;
  margin-left: -230rpx;
  top: 190rpx;
  border-radius:10rpx; 
  overflow: hidden;
}
.showModal .mask2{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.7;
}
.modalMain{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 2;
}
.modalMain>view:first-child{
  width: 90rpx;
  height: 70rpx;
  margin: 30rpx auto;
  position: relative;
}
.modalMain>view:first-child image{
  width: 90rpx;
  height: 70rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.modalMain>view:first-child view{
  width: 90rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
  text-align: center;
}
.hint{
  width: 100%;
  height: 36rpx;
  line-height: 34rpx;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
}
.modalMain>view:last-child{
  width: 100%;
  height: 40rpx;
  font-size: 40rpx;
  line-height: 40rpx;
  margin-top: 36rpx;
  color: #e3b22f;
  text-align: center;
}
.modalMain>view:last-child text:last-child{
 color: #fff;
 font-size: 28rpx;
 padding-left: 12rpx;
}