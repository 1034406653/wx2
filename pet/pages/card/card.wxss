/* pages/card/card.wxss */
.view-li{
  width: 100%;
  height: 90rpx;
  border-bottom:2rpx solid #eee;
  background: #fff; 
  overflow: hidden;
  padding: 0 30rpx;
}
.view-li image{
  width: 60rpx;
  height: 60rpx;
  border-radius:50%;
  margin-top:12rpx;  
  float: right;
}
.view-title{
  width: auto;
  height: 88rpx;
  line-height: 88rpx;
  float: left;
  color: #999;
  font-size: 28rpx;
}
.view-li input{
  float: right;
  width: 488rpx;
  text-align: right;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
}
 .view-li2{
  height: 140rpx;
 }
.view-li2 textarea{
  float: right;
  width: 488rpx;
  text-align: right;
  height: 140rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  padding: 20rpx 0;
  overflow-y: hidden;
  text-overflow: hidden;
 }
 .inputHover{
   color: #999;
 }
 .textAreaHover{
   line-height: 50rpx;
   color: #999;
 }
 button{
   width: 100%;
   height: 88rpx;
   background: #fff;
   font-size: 28rpx;
   line-height: 88rpx;
   color: #999;
   margin-top: 70rpx;
 }
  button:after{
   border: none;
 }