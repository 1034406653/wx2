/* pages/order/order.wxss */
.container{
  display: block;
  overflow: hidden;
}
.left-nav{
  width: 225rpx;
  height: 100%;
  float: left;
  background: #fff;
}
.nav-li{
  width: 100%;
  height: 160rpx;
  line-height: 160rpx;
  color: #999;
  font-size: 30rpx;
  text-align: center;
}
.left-nav .active{
  color: #23beea;
  border-right: 4rpx solid #23beea;
  background: #e9eaec;
}
.main-right{
  float: right;
  width: 524rpx;
}
.main{
  width: 100%;
  height: 100%;
  padding-left: 40rpx;
}
.main-form{
  width: 100%;
  height: 170rpx;
  padding-top: 56rpx;
}
.main-form>view{
  width: 100%;
  height: 50rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  color: #333;
}
.main-form>input{
  width: 456rpx;
  height: 62rpx;
  line-height: 58rpx;
  border: 2rpx solid #999;
  color: #999;
  font-size: 26rpx;
  padding: 0 16rpx;
}
.main .hint{
  width: 440rpx;
  height: 284rpx;
  line-height: 46rpx;
  color: #999;
  font-size: 24rpx;
  padding-top: 46rpx;
}
.main button{
  width: 440rpx;
  height: 88rpx;
  background: #20caed;
  line-height: 88rpx;
  border-radius:10rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 0;
}
.main button:after{
  border: none
}
.main .btnActive{
  background: #209ded;
}
.main2 .main-form{
  height: 96rpx;
}
picker{
  width: 456rpx;
  height: 62rpx;
  line-height: 58rpx;
  border: 2rpx solid #999;
  color: #999;
  font-size: 26rpx;
  overflow: hidden;
  box-sizing: border-box; 
  position: relative;
}
.picker-btn{
  position: absolute;
  right: 0;
  top: 0;
  width: 52rpx;
  height: 100%;
  float: right;
  background: #c9c9c9;
}
.picker-btn image{
  width: 22rpx;
  height: 20rpx;
  margin: 19rpx auto;
}
.picker{
  width: 100%;
  height: 100%;
  float: left;
  font-size: 24rpx;
  color: #999;
  padding-left: 16rpx;
}
