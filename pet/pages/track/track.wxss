/* pages/track/track.wxss */
.container{
  padding: 4rpx 2rpx;
  box-shadow:0px 0rpx 2rpx 2rpx #eee inset;
  display: flex;
  flex-direction:column;
}
map{
  width: 100%;
  flex: 1;
}
.time-box{
  width: 100%;
  height: 320rpx;
  background: #fff;
}
.time-control{
  width: 100%;
  height: 98rpx;
  padding: 0 30rpx;
  overflow: hidden;
}
.time-control image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 40rpx;
}
.time-li{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 30rpx;
  padding: 0 30rpx;
}
.time-li picker{
  float: left;
  height: 90rpx;
  padding-right: 28rpx;
  width: auto;
}
.time-li view{
  float: left;
  height: 90rpx;
  width: auto;
}
.time-li image{
  float: right;
  width: 16rpx;
  height: 30rpx;
  margin-top: 30rpx;
}