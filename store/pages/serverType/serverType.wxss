/* pages/serverType/serverType.wxss */
.top{
  width: 100%;
  height: 180rpx;
  padding: 16rpx 24rpx;
  background: #fff;
  box-shadow: 0px 2px 6px #eeeeee;
}
.top image{
  float: left;
  width: 146rpx;
  height: 145rpx;
}
.top view{
  float: right;
  width: 518rpx;
  height: 180rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #333;
  overflow: hidden;
  padding-top:8rpx; 
}
.typeBox{
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 18rpx;
}
.typeLi{
  width: 100%;
  height: 128rpx;
  border-bottom: 2rpx solid #eee;
  overflow: hidden;
}
.typeLi .iconImg{
  float: left;
  width: 44rpx;
  height: 44rpx;
  margin: 26rpx 31rpx 0 22rpx;
}
.typeLi .center{
  float: left;
  width: 600rpx;
  height: 126rpx;
  padding: 30rpx 0; 
}
.typeLi .center view:first-child{
  width: 100%;
  height: 45rpx;
  line-height: 25rpx;
  color: #333;
  font-size: 25rpx;
  overflow: hidden;
}
.typeLi .center view:last-child{
  width: 100%;
  height: 26rpx;
  line-height: 21rpx;
  color: #a8a8a8;
  overflow: hidden;
  font-size: 21rpx
}
.iconNav{
  width: 30rpx;
  height: 30rpx;
  margin: 48rpx 19rpx 0 0%;
  float: right;
}