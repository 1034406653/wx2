/* pages/evaluate/evaluate.wxss */
/*导航  */
.nav{
  width: 100%;
  height: 110rpx;
  background: #fff;
  overflow: hidden;
  padding: 0 15rpx;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 18rpx;
}
.nav>view{
  width: 160rpx;
  float: left;
  height: 108rpx;
  margin:0 10rpx; 
  text-align: center;
  padding: 8rpx 0;
  line-height: 46rpx;
  font-size: 28rpx;
}
.nav .num{
  font-size: 24rpx;
  line-height: 42rpx;
}
.nav .active{
  color: #ec5f18;
  border-bottom: 3rpx solid #ec5f18;
}
/*评价列表  */
.evaluate-list{
  width: 100%;
  height: auto;
  overflow: hidden;
  
  border-top:2rpx solid #eee; 
}
.evaluate-li{
  width: 100%;
  height: auto;
  border-bottom: 2rpx solid #eee;
  padding: 28rpx 30rpx;
  overflow: hidden;
}
/*头像  */
.chatHead{
  width: 85rpx;
  height: 85rpx;
  background: #eee;
  border-radius:50%;
  overflow: hidden;
  float: left; 
}
.chatHead image{
  width: 100%;
  height: 100%;
}
.evaluate-li-right{
  width: 604rpx;
  height: auto;
  float: left;
  padding-left: 18rpx;
}
/*电话时间  */
.evaluate-li-right .top{
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #848484;
  overflow: hidden;
}
.evaluate-li-right .top view{
  float: left;
}
.evaluate-li-right .top view:last-child{
  float: right;
  font-size: 22rpx;
  line-height: 50rpx;
}
/*五星  */
.star-box{
  width: 100%;
  height: 60rpx;
  overflow: hidden;
  padding-top: 4rpx;
}
.star-box image{
  float: left;
  width: 28rpx;
  height: 28rpx;
}
.evaluate1{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.evaluate1 view{
  float: left;
  width: auto;
  height: 44rpx;
  padding: 0 20rpx;
  line-height: 44rpx;
  color: #848484;
  font-size: 23rpx;
  margin: 0 12rpx 10rpx 0;
  border-radius: 16rpx;
  background: #f5f5f5;
}
.evaluate2{
  width: 100%;
  height: auto;
  font-size: 26rpx;
  line-height: 34rpx;
  padding: 6rpx 0 12rpx 0;
}
.reply{
  width: 100%;
  height: auto;
  background: #f6f4f3;
  color: #eb6820;
  font-size: 26rpx;
  padding: 20rpx 20rpx;
  line-height: 34rpx;
}
.reply text{
  color: #666;
}
.evaluate-empty{
  width: 100%;
  height: auto;
  line-height: 600rpx;
  font-size: 36rpx;
  text-align: center;
  color: #666;
}