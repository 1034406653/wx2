/*购物车为空  */

.cartBox {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  border-top: 2rpx solid #eee;
  display: flex;
  flex-direction: column;
}

.cartIsEmpty .text {
  width: 278rpx;
  height: 248rpox;
  font-size: 29rpx;
  color: #333;
  margin: 0 auto;
  padding-top: 159rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.cartIsEmpty image {
  width: 46rpx;
  height: 46rpx;
  float: left;
}

.cartIsEmpty .text text {
  float: left;
  width: auto;
  height: 66rpx;
  padding-left: 30rpx;
}

.cartIsEmpty .navIndex {
  width: 162rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 30rpx;
  margin: 0 auto;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #333;
}

/*购物车不为空  */

.cartBox-top {
  display: block;
  width: 750rpx;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 30rpx;
  color: #666;
  box-shadow: 0px 1px 3px #bbb;
  overflow: hidden;
  background: #fff;
}

.goodsList {
  width: 100%;
  flex: 1;
  overflow-y: auto;
  padding-bottom: 10rpx;
}

.cartBox-bottom {
  width: 100%;
  height: 94rpx;
}

/*购物车顶部  */

.checkBoxZong {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
  margin: 27rpx;
  float: left;
}

.selectAllAcitve {
  background: green;
}

.cartBox-top-text {
  float: left;
  width: auto;
}

.cartBox-topBtn {
  width: 80rpx;
  height: 100%;
  float: right;
}

/*购物列表  */

.goodsLi {
  width: 100%;
  height: 172rpx;
  border-bottom: 2rpx solid #eee;
  overflow: hidden;
}

.checkBox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
  margin: 65rpx 27rpx;
  float: left;
}

.goodsLi .selected {
  background: green;
}

.goodsLi image {
  width: 123rpx;
  height: 123rpx;
  float: left;
  margin-top: 24rpx;
}

/*默认状态的商品右侧部分  */

.goodsDetails {
  width: 532rpx;
  float: left;
  height: 170rpx;
  padding-left: 16rpx;
}

.goodsDetails-top {
  width: 100%;
  height: 96rpx;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  padding-top: 20rpx;
  line-height: 38rpx;
}

.goodsDetails-text {
  width: 68%;
  height: 76rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  float: left;
}

.goodsDetails-price {
  width: 30%;
  height: 72rpx;
  line-height: 36rpx;
  float: left;
  padding-left: 20rpx;
  text-align: right;
  overflow: hidden;
}

.goodsDetails-bottom {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
  font-size: 24rpx;
  overflow: hidden;
}

.goodsDetails-bottom .sizeColor {
  width: 70%;
  float: left;
}

.goodsDetails-bottom .num {
  width: 28%;
  float: right;
  text-align: right;
  padding-right: 10rpx;
  color: #666;
}

/*编辑状态的商品右侧部分  */

.changeBox {
  width: 532rpx;
  float: left;
  height: 170rpx;
  padding-left: 16rpx;
}

.changeNum {
  width: 80%;
  height: 170rpx;
  padding: 50rpx 100rpx;
  float: left;
  overflow: hidden;
  font-size: 40rpx;
}

.changeNum .addNmu {
  float: left;
  width: 58rpx;
  height: 58rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 6rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
}

.changeNum .reduceNmu {
  float: left;
  width: 58rpx;
  height: 58rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 6rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
}

.changeNum .addNmuActive {
  border-color: #eb4c50;
  color: #eb4c50;
}

.changeNum .reduceNmuActive {
  border-color: #eb4c50;
  color: #eb4c50;
}

.changeNum .nmuText {
  float: left;
  width: 80rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 70rpx;
}

.changeDel {
  width: 20%;
  height: 170rpx;
  float: left;
  font-size: 32rpx;
  background: #ff5659;
  color: #fff;
  text-align: center;
  line-height: 170rpx;
}

.cartBox-bottom-left {
  width: 70%;
  height: 92rpx;
  line-height: 92rpx;
  color: #666;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  padding-left: 24rpx;
  float: left;
}

.cartBox-bottom-left .num {
  color: #ff5659;
}

.cartBox-bottom-left text:last-child {
  font-size: 24rpx;
  padding-left: 10rpx;
}

.cartBox-bottom-btn {
  width: 30%;
  float: left;
  background: #ff5659;
  text-align: center;
  color: #fff;
  line-height: 94rpx;
  font-size: 28rpx;
}
