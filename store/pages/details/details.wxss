.mainInformation {
  width: 100%;
  height: auto;
  background: #fff;
  border-top: 2rpx solid #eee;
  padding-top: 2rpx;
}

.goodsPic {
  width: 55%;
  margin: 0 auto;
}

.price {
  width: 88%;
  margin: 0 auto;
  overflow: hidden;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 26rpx;
  color: #eb4c50;
  display: flex;
}

.newPrice {
  width: auto;
  height: 76rpx;
  line-height: 70rpx;
  display: block;
  font-size: 36rpx;
}

.oldPrice {
  text-decoration: line-through;
  color: #9c9c9c;
  padding-left: 20rpx;
}

.mainInformation .text {
  width: 90%;
  margin: 0 auto;
  height: 110rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #666;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
/*闪电发货  */
.delivery {
  width: 100%;
  height: 82rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #eee;
  font-size: 24rpx;
  color: #999;
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
}

.delivery view {
  width: auto;
  display: flex;
  padding-left: 28rpx;
  padding-right: 16rpx;
}

.delivery icon {
  display: block;
  margin-top: 20rpx;
  margin-right: 6rpx;
}

.delivery text {
  display: block;
}
/*商品评价  */
.evaluate{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 18rpx;
  border-bottom: 2rpx solid #eee;
  padding-left: 34rpx;
  padding-right: 20rpx;
}
.evaluate-title{
  float: left;
}
.star-box{
  float: right;
  overflow: hidden;
}
.star-box view{
  float: left;
}
.star-box text{
  font-size: 24rpx;
}
.star-box .star{
  width: auto;
  height: 80rpx;
  overflow: hidden;
}
.star-box image{
  float: left;
  width: 28rpx;
  height: 28rpx;
  margin: 24rpx 0 0 0;
}
.evaluate-title text:last-child{
  font-size: 24rpx;
}
.evaluate .next{
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 27rpx;
  margin-left: 20rpx;
}
.evaluate .next image{
  width: 30rpx;
  height: 30rpx;
}
/*商品详情  */
.detailes {
  width: 100%;
  height: auto;
  background: #fff;
}

.detailes-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 34rpx;
  color: #666;
  font-size: 30rpx;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 10rpx;
}

.imgBox {
  width: 92%;
  height: auto;
  margin: 5rpx auto;
}

.imgBox image {
  width: 100%;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 104rpx;
  background: #fff;
  box-shadow: 2rpx 2rpx 8rpx #888;
  display: flex;
}

.bottom-index {
  width: 110rpx;
  height: 104rpx;
  border-right: 2rpx solid #eee;
}

.bottom-cart {
  width: 110rpx;
  height: 104rpx;
}

.bottom-index image, .bottom-cart image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
  margin-top: 18rpx;
}
.bottom-index text, .bottom-cart text {
  width: 100%;
  display: block;
  text-align: center;
  color: #999;
  height: 50rpx;
  font-size: 20rpx;
  line-height: 40rpx;
}
.bottom-joinCart {
  width: 200rpx;
  height: 60rpx;
  margin: 22rpx 0 0 250rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  background: #ff9934;
  text-align: center;
  border-radius: 20rpx;
}
.bottom-joinCartActive{
  background: #fb7c1e;
}
