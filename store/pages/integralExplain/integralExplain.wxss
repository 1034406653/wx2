/* pages/integralExplain/integralExplain.wxss */

.content {
  background: #fff;
}

.nav {
  width: 100%;
  height: 86rpx;
  line-height: 84rpx;
  overflow: hidden;
  background: #fff;
}

.nav view {
  float: left;
  width: 33.33%;
  height: 86rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 28rpx;
  text-align: center;
  color: #333;
}

.nav .active {
  color: #f96908;
  border-bottom: 4rpx solid #f96908;
}

.main {
  width: 100%;
  height: auto;
  padding: 16px;
}

.main-title {
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  padding-left: 24rpx;
  color: #333;
  font-size: 28rpx;
}

.main-text {
  width: 100%;
  height: auto;
  overflow: hidden;
  line-height: 40rpx;
  color: #777;
  font-size: 28rpx;
}

.main-text>view {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 54rpx;
}
.main-text>view>image{
  width: 96%;
  height: 76rpx;
  margin: 0 auto;
  margin-top: 16rpx;
}
.main-text>view>view{
  float: left;
  width: 25%;
  line-height: 38rpx;
  padding: 16rpx 10rpx;
  text-align: center;
}
.main-text>view>view text{
  display: block;
  width: 100%;
  height: 38rpx;
}
.main-text .from-box{
  padding: 0 18rpx;
}
.main .main-li{
  padding: 0;
  width: 94%;
  margin: 0 auto;
  border-left:2rpx solid #eee;
  border-right:2rpx solid #eee;  
}
.main-li:first-child{
  height: 70rpx;
  background: #fafafa;
  color: #333;
  font-weight: bold;
  font-size: 22rpx;
  text-align: center;
  line-height: 26rpx;
}
.main-li:last-child{
  border-bottom:2rpx solid #eee; 
}
.main-li text{
  float: left;
  display: table;
  width: 35%;
  text-align: center;
  padding: 20rpx 10rpx;
  border: 2rpx solid #eee;
  border-bottom:none;   
}
.main-li text:first-child{
  width: 20%;
  border-left:none;
  border-right:none;  
}

.main-li text:last-child{
  width: 45%; 
  border-left:none;
  border-right:none; 
}