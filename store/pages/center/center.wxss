/* pages/center/center.wxss */

.center-top {
  width: 100%;
  height: 270rpx;
  background: #ff5659;
  overflow: hidden;
}

.image-box {
  width: 114rpx;
  height: 114rpx;
  border: 4rpx solid #ff8788;
  border-radius: 50%;
  margin: 10rpx auto;
  overflow: hidden;
  margin-top: 20rpx;
}

.image-box image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.center-name{
  display: block;
  width: 100%;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
.center-id{
  width: 156rpx;
  height: 52rpx;
  margin: 0 auto;
  overflow: hidden;
}
.center-id image{
  width: 24rpx;
  height: 19rpx;
  float: left;
  margin-top: 17rpx;
}
.center-id text{
  width: auto;
  height: 52rpx;
  float: left;
  color: #fff;
  line-height: 52rpx;
  font-size: 20rpx;
  padding-left: 10rpx;
}
.center-main{
  width: 100%;
  height: 230rpx;
  background: #fff;
  margin-top: 18rpx;
}
.main-top{
  width: 100%;
  overflow: hidden;
  height: 98rpx;
  font-size: 29rpx;
  line-height: 86rpx;
  color: #333;
}
.main-top image:first-child{
  width: 30rpx;
  height: 32rpx;
  float: left;
  margin-left: 21rpx;
  margin-top: 30rpx;
}
.main-top text{
  width: auto;
  height: 98rpx;
  float: left;
  margin-left: 30rpx;
}
.main-top image:last-child{
  width: 30rpx;
  height: 32rpx;
  float: right;
  margin-top: 30rpx;
  margin-right: 16rpx;
}
.center-main .main{
  width: 100%;
  height: 130rpx;
  overflow: hidden;
  padding: 0 2%;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
  line-height: 50rpx;
}
.center-main .main>view{
  float: left;
  width: 25%;
  height: 125rpx;
}
.icon-box{
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
  position: relative;
  padding-top: 10rpx;
}
.icon-box .icon{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right:5rpx;
  top: 0rpx;
  background: #fd575b;
  text-align: center;
  line-height: 28rpx;
  color: #fff;
  font-size: 18rpx;
  border-radius: 50%;
}
.center-main .nav-pay image{
  width: 45.8rpx;
  height:44.4rpx;
  margin: 0 auto;
}
.center-main .nav-send image{
  width: 54.4rpx;
  height:54.4rpx;
  margin: 0 auto;
}
.center-main .nav-receipt image{
  width: 58.4rpx;
  height:56.4rpx;
  margin: 0 auto;
}
.center-main .nav-done image{
  width: 50.4rpx;
  height:50.4rpx;
  margin: 0 auto;
}
.property{
  width: 100%;
  height: auto;
  margin-top: 18rpx;
  background: #fff;
  overflow: hidden;
}
.property-title{
  width: 100%;
  height: 92rpx;
  overflow: hidden;
  position: relative;
}
.property-title image:first-child{
  width: 31rpx;
  height: 31rpx;
  margin: 30rpx;
  margin-left: 21rpx;
  float: left;
}
.property-title text{
  float: left;
  width: auto;
  color: #666;
  font-size: 29rpx;
  line-height: 90rpx;
}
.property-title image:last-child{
  width: 30rpx;
  height: 32rpx;
  float: right;
  margin-top: 29rpx;
  margin-right: 16rpx;
}
.property .property-main{
  width: 100%;
  height: 120rpx;
  padding: 0 2%;
}
.property .property-main:after{
  content: "";
  clear: both;
  height: 0;
  visibility: hidden;
  display: block;
}
.property-main>view{
  float: left;
  width: 25%;
  height: 125rpx;
  text-align: center;
  color: #666;
  padding-top: 20rpx;
  position: relative;
}
.property-main .num{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 40rpx;
}
.property-main .text{
  font-size: 28rpx;
  line-height: 50rpx;
}
.property-main .member-card .num{
  color: #f5680c;
}
.property-main .recharge{
  position: absolute;
  left: 50%;
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 2010rpx;
  background: #de0041;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  top: -10rpx;
  margin-left: -50rpx;
}
.navNoPassword{
  position: absolute;
  right: 0;
  width: 250rpx;
  height: 92rpx;
  font-size: 24rpx;
  color: #ec7f2d;
  line-height: 90rpx;
  top: 0;
}